#!/usr/bin/env xdg-open
[Desktop Entry]
Name=Setup Steam Deck
Exec=sh -c 'rm -f /tmp/SteamOS_Setup.sh; if curl -S -s -L -O --output-dir /tmp/ --connect-timeout 60 https://github.com/SpicyRatSauce/SteamDeckFirstTimeSetupRat/raw/main/SteamOS_Setup.sh; then bash /tmp/SteamOS_Setup.sh; else echo "Something went wrong, please report this if it is a bug"; read; fi'
Icon=steamdeck-gaming-return
Terminal=true
Type=Application
StartupNotify=false
